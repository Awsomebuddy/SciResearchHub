<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SciResearchHub</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="icon" href="~/logo.png" />
</head>
<body style="background-color:#EEEEEE;" >
    <div class="jumbotron jumbotron-fluid" style="padding: 0px;background-color:#222831" >
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm position-sticky sticky-top bg-transparent ">
                <div class="container">
                    <a class="navbar-brand" asp-area="" asp-page="/Index"><img style="width:60px;" src="~/logo.png" /></a>
                    <button class="navbar-toggler align-content-lg-stretch" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-block flex-sm-row-reverse">
                        <ul class="nav ">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Categories</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">What's an Abstracted Research ?</a>
                            </li>
                        </ul>
                    </div>
                    <div class="dropdown navbar-collapse collapse">
                        <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Sign Up | Sign In
                        </button>
                        <div class="dropdown-menu " aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" href="#">Sign In</a>
                            <a class="dropdown-item" href="#">Sign Up</a>

                        </div>
                    </div>

                </div>
            </nav>
        </header>
        <div class="jumbotron jumbotron-fluid bg-transparent" >
            <div class="container">
                <h1 class="display-4" style="color:InfoText">SciResearchHub</h1>
                <p class="lead" style="color:InfoText">Share and Enjoy Abracted Researches in all Scientific Research fields.</p>
            </div>
        </div>
    </div>
    <div class="container" style="background-color:#4f8a8b">
        <main role="main" class="pb-3">
            <ul class="nav nav-tabs">
                <li class="nav-item">
                    <a class="nav-link category Bio active" >Biology</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link category Med" >Medicine</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link category Compu">computer Science</a>
                </li>
            </ul>
            <div class="catresult" >

                <div class="row" style=" background-color: #fbd46d; margin-left:3px;margin-right:3px; ">
                    @RenderBody()
                </div>

            </div>
        </main>
    </div>
    <div class="jumbotron jumbotron-fluid" >
        <div class="container">
            <h1 class="display-4" style="color:InfoText">SciResearchHub</h1>
            <p class="lead" style="color:InfoText">Share and Enjoy Abracted Researches in all Scientific Research fields.</p>
        </div>
    </div>
    <footer class="border-top footer text-muted " style=" background-color: #fbd46d;">
        <div class="container">
            &copy; 2020 - SciResearchHub - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
